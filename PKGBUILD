options=('!strip') 
package() {
  install -d "${pkgdir}/opt/${pkgname}"
  install -d "${pkgd}/usr/share/applications"
  install -d "${pkgdir}/usr/share/icons"
  install -d "${pkgdir}/usr/lib/rstudio/bin"
  cp $srcdir/data.tar.xz $pkgdir/opt/$pkgname/data.tar.xz
  cd $pkgdir/opt/$pkgname
  tar xf data.tar.xz
  rm data.tar.xz
  install -vDm644 "${pkgdir}/opt/${pkgname}/usr/share/applications/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -vDm644 "${pkgdir}/opt/${pkgname}/usr/lib/rstudio/${pkgname}.png" "${pkgdir}/usr/share/icons/$pkgname.png"
  ln -s /opt/${pkgname}/usr/share/icons/ ${pkgdir}/usr/share/icons/${pkgname}
  ln -s /opt/${pkgname}/usr/lib/rstudio/bin/rstudio ${pkgdir}/usr/lib/rstudio/bin/rstudio
}

